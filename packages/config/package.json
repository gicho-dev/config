{
	"name": "@gicho/config",
	"version": "0.0.1-alpha.7",
	"description": "Reusable base ESLint, Prettier and TSConfig for modern TS/JS projects.",
	"keywords": [
		"config",
		"dev",
		"eslint",
		"prettier",
		"tsconfig"
	],
	"license": "MIT",
	"author": "Lucas Choi",
	"repository": {
		"type": "git",
		"url": "https://github.com/gicho-dev/config"
	},
	"homepage": "https://github.com/gicho-dev/config",
	"sideEffects": false,
	"type": "module",
	"exports": {
		"./eslint": {
			"source": "./src/eslint/index.ts",
			"types": "./dist/eslint/index.d.ts",
			"default": "./dist/eslint/index.js"
		},
		"./eslint/plugins": {
			"source": "./src/eslint/plugins.ts",
			"types": "./dist/eslint/plugins.d.ts",
			"default": "./dist/eslint/plugins.js"
		},
		"./prettier": {
			"source": "./src/prettier/index.ts",
			"types": "./dist/prettier.d.ts",
			"default": "./dist/prettier.js"
		},
		"./tsconfig.base.json": "./tsconfig.base.json",
		"./tsconfig.react.json": "./tsconfig.react.json",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"tsconfig.base.json",
		"tsconfig.react.json"
	],
	"scripts": {
		"b": "tsdown",
		"build": "tsdown",
		"format": "prettier --check .",
		"format:fix": "prettier --check --write .",
		"lint": "eslint . --cache",
		"lint:fix": "pnpm lint -- --fix",
		"types": "tsc --noEmit"
	},
	"dependencies": {
		"@eslint/js": "catalog:prod",
		"@stylistic/eslint-plugin": "catalog:prod",
		"@vitest/eslint-plugin": "catalog:prod",
		"eslint-config-flat-gitignore": "catalog:prod",
		"eslint-config-prettier": "catalog:prod",
		"eslint-plugin-import-x": "catalog:prod",
		"eslint-plugin-jsdoc": "catalog:prod",
		"eslint-plugin-jsonc": "catalog:prod",
		"eslint-plugin-n": "catalog:prod",
		"eslint-plugin-perfectionist": "catalog:prod",
		"eslint-plugin-regexp": "catalog:prod",
		"globals": "catalog:prod",
		"typescript-eslint": "catalog:prod"
	},
	"devDependencies": {
		"@types/eslint-plugin-jsx-a11y": "catalog:dev"
	},
	"peerDependencies": {
		"@eslint-react/eslint-plugin": "^1.52",
		"eslint": ">=9.32",
		"eslint-plugin-jsx-a11y": "^6.10",
		"eslint-plugin-react-hooks": "^5.2",
		"eslint-plugin-svelte": "^3.11",
		"prettier": ">=3.6"
	},
	"peerDependenciesMeta": {
		"@eslint-react/eslint-plugin": {
			"optional": true
		},
		"eslint-plugin-jsx-a11y": {
			"optional": true
		},
		"eslint-plugin-react-hooks": {
			"optional": true
		},
		"eslint-plugin-svelte": {
			"optional": true
		}
	}
}
